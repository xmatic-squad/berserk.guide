<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">

  <!-- Favicon -->
  <link rel="icon" href="{{ root }}assets/img/favicon.png">

  <!-- Goole fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,300;0,400;0,600;1,400&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet">

  <!-- Material icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- CSS -->
  <link rel="stylesheet" href="{{ root }}assets/css/style.css">

  {%- if ('docs' in page.url) or ('style' in page.url) %}
    <!-- PrismJS theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism-okaidia.min.css">
  {% endif %}

  <!-- JS -->
  <script src="{{ root }}assets/js/bootstrap.js" defer></script>
  <script src="{{ root }}assets/js/lightbox.js" defer></script>
  <script src="{{ root }}assets/js/scripts.js" defer></script>
</head>